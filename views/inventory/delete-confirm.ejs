<%# code to add the main heading element and giving it a value the same as the
title variable %> <% if (title) { %>
<h1><%- title %></h1>
<% } else {res.redirect('/')}%> <%- messages() %> <% if (errors) { %>
<ul class="notice">
  <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>

<p>Confirm Deletion - The delete is permanent.</p>
<form id="updateForm" action="/inv/delete" method="post">
  <label for="inv_make">Inventory Make</label>
  <input
    type="text"
    name="inv_make"
    id="inv_make"
    value="<%= inv_make %>"
    readonly
  />
  <label for="inv_model">Inventory Model</label>
  <input
    type="text"
    name="inv_model"
    id="inv_model"
    value="<%= inv_model %>"
    readonly
  />
  <label for="inv_year">Inventory Year</label>
  <input
    type="text"
    name="inv_year"
    id="inv_year"
    value="<%= inv_year %>"
    readonly
  />
  <label for="inv_price">Inventory Price</label>
  <input
    type="number"
    name="inv_price"
    id="inv_price"
    value="<%= inv_price %>"
    readonly
  />
  <button type="submit">Delete Vehicle</button>
  <input type="hidden" name="inv_id" <% if(locals.inv_id) { %> value="<%=
  locals.inv_id %>" <% } %>/>
</form>
