<%# code to add the main heading element and giving it a value the same as the
title variable %> <% if (title) { %>
<h1><%- title %></h1>
<% } else {res.redirect('/')}%> <%- messages() %>

<form>
  <label for="email">Email:</label>
  <input type="email" id="email" name="account_email" required />
  <label for="password">Password:</label>
  <span
    >Passwords must be at least 12 characters and contain at least 1 number, 1
    capital letter and 1 special character</span
  >
  <input
    type="password"
    id="password"
    name="account_password"
    pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
    required
  />
  <button>Login</button>
  <p>No account? <a href="/account/register">Sign-up</a></p>
</form>
