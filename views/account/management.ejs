<%# code to add the main heading element and giving it a value the same as the
title variable %> <% if (title) { %>
<h1><%- title %></h1>
<% } else {res.redirect('/')}%> <%- messages() %> <% if (errors) { %>
<ul class="notice">
  <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>
<div class="accountManagement">
  <h2>Welcome <%- locals.accountData.account_firstname %></h2>

  <p>You're logged in</p>

  <a href="/account/update/<%- locals.accountData.account_id %>">
    update account information</a
  >

  <% if(locals.accountData.account_type == 'Employee' ||
  locals.accountData.account_type == 'Admin') { %>
  <h3>Inventory Management</h3>
  <p><a href="/inv">go to the inventory management view</a></p>
  <% } else {%>
  <p></p>
  <% } %>
</div>
